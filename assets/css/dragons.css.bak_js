    linear-gradient(60deg, rgba(184, 134, 11, 0.1) 25%, transparent 25.5%, transparent 75%, rgba(184, 134, 11, 0.1) 75%, rgba(184, 134, 11, 0.1)),
    linear-gradient(60deg, rgba(184, 134, 11, 0.1) 25%, transparent 25.5%, transparent 75%, rgba(184, 134, 11, 0.1) 75%, rgba(184, 134, 11, 0.1));
  background-size: 40px 70px;
  background-position: 0 0, 0 0, 20px 35px, 20px 35px, 0 0, 20px 35px;
  opacity: 0.05;
  pointer-events: none;
  box-shadow: inset 0 0 0 1px rgba(218, 165, 32, 0.2);
  /* Double line effect */
}

/* Scrolling Background Text */
.modal-hero-bg-text {
  position: absolute;
  top: 0;
  left: 0;
  width: 200%;
  height: 100%;
  z-index: 0;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  font-size: 10rem;
  font-weight: 900;
  color: rgba(0, 0, 0, 0.08);
  white-space: nowrap;
  line-height: 1;
  pointer-events: none;
  transform: rotate(-10deg) translateY(-20%);
  transform-origin: left center;
  animation: bgTextScroll 20s linear infinite;
  font-family: 'Oswald', 'Roboto Condensed', sans-serif;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

@keyframes bgTextScroll {
  0% {
    transform: rotate(-10deg) translateY(-20%) translateX(0);
  }

  100% {
    transform: rotate(-10deg) translateY(-20%) translateX(-50%);
  }
}

/* Decorative Gold Corners */
.modal-hero-frame {
  position: absolute;
  inset: 14px;
  z-index: 1;
  pointer-events: none;
  background:
    /* Top Left */
    linear-gradient(to right, #b8860b 2px, transparent 2px) 0 0,
    linear-gradient(to bottom, #b8860b 2px, transparent 2px) 0 0,
    /* Top Right */
    linear-gradient(to left, #b8860b 2px, transparent 2px) 100% 0,
    linear-gradient(to bottom, #b8860b 2px, transparent 2px) 100% 0,
    /* Bottom Left */
    linear-gradient(to right, #b8860b 2px, transparent 2px) 0 100%,
    linear-gradient(to top, #b8860b 2px, transparent 2px) 0 100%,
    /* Bottom Right */
    linear-gradient(to left, #b8860b 2px, transparent 2px) 100% 100%,
    linear-gradient(to top, #b8860b 2px, transparent 2px) 100% 100%;
  background-repeat: no-repeat;
  background-size: 24px 24px;
  opacity: 0.8;
}

/* Vertical Catchphrase (One Liner) - Tanzaku Style */
.modal-hero-catch-vertical {
  position: absolute;
  top: 12%;
  left: 24px;
  z-index: 3;
  /* Above portrait and frame */

  writing-mode: vertical-rl;
  font-family: "Shippori Mincho", "Yu Mincho", "YuMincho", serif;
  font-weight: 500;
  font-size: 1.25rem;
  line-height: 1.6;
  letter-spacing: 0.15em;

  color: #fff;
  /* Use main color with slight transparency for background */
  background: var(--d-main, #333);
  padding: 20px 10px;

  border: 1px solid rgba(255, 255, 255, 0.3);
  box-shadow: 4px 4px 12px rgba(0, 0, 0, 0.4);

  /* Animation */
  opacity: 0;
  transform: translateY(20px);
  transition: opacity 0.8s ease 0.3s, transform 0.8s ease 0.3s;

  /* Ensure text shadow for readability if needed */
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
}

/* Animation Active State */
.is-animating .modal-hero-catch-vertical {
  opacity: 1;
  transform: translateY(0);
}

/* Decorative Dragon Cloud / Smoke Effect at Bottom */
.modal-hero::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120px;
  background:
    radial-gradient(ellipse at 50% 100%, rgba(255, 255, 255, 0.1) 0%, transparent 60%),
    linear-gradient(to top, rgba(0, 0, 0, 0.4) 0%, transparent 100%);
  pointer-events: none;
  z-index: 1;
}

.modal-hero img {
  width: 100%;
  height: auto;
  min-height: 48vh;
  max-height: 55vh;
  object-fit: contain;
  object-position: center bottom;
  display: block;
  position: relative;
  z-index: 2;
  filter: drop-shadow(0 8px 16px rgba(0, 0, 0, 0.2));
  /* Initial state for animation */
  opacity: 0;
  transform: scale(0.95) translateY(10px);
  transition: opacity 0.8s ease-out, transform 0.8s cubic-bezier(0.215, 0.61, 0.355, 1);
}

/* Animation Active State */
.modal-hero.is-animating img {
  opacity: 1;
  transform: scale(1) translateY(0);
}

.modal-hero-text {
  padding: 24px 20px 28px;
  background: #fff;
  position: relative;
  z-index: 3;
  /* Create a curved overlap with the image section */
  margin-top: -24px;
  border-radius: 24px 24px 0 0;
  box-shadow: 0 -4px 16px rgba(0, 0, 0, 0.1);
}

.modal-hero-jp {
  font-size: 0.9rem;
  font-weight: 700;
  letter-spacing: 0.1em;
  color: var(--d-accent);
  margin-bottom: 8px;
  opacity: 0;
  transform: translateY(10px);
  transition: opacity 0.6s ease-out 0.2s, transform 0.6s ease-out 0.2s;
}

.modal-hero.is-animating .modal-hero-jp {
  opacity: 1;
  transform: translateY(0);
}

.modal-hero-name {
  font-size: 2.2rem;
  font-weight: 800;
  letter-spacing: 0.03em;
  color: #1a1a1a;
  margin: 0;
  line-height: 1.1;
  position: relative;
  display: inline-block;
  opacity: 0;
  transform: translateY(15px);
  transition: opacity 0.6s ease-out 0.3s, transform 0.6s ease-out 0.3s;
  /* Gold text shadow/stroke effect */
  text-shadow: 2px 2px 0px rgba(184, 134, 11, 0.15);
}

.modal-hero.is-animating .modal-hero-name {
  opacity: 1;
  transform: translateY(0);
}

/* Animated underline */
.modal-hero-name::after {
  content: '';
  display: block;
  width: 60px;
  height: 4px;
  background: linear-gradient(90deg, var(--d-accent) 0%, #b8860b 100%);
  margin-top: 12px;
  transform: scaleX(0);
  transform-origin: left;
  transition: transform 0.6s cubic-bezier(0.215, 0.61, 0.355, 1) 0.5s;
  border-radius: 2px;
}

.modal-hero.is-animating .modal-hero-name::after {
  transform: scaleX(1);
}

.modal-hero-tag {
  font-size: 0.8rem;
  margin-top: 12px;
  color: #666;
  font-weight: 500;
  display: flex;
  align-items: center;
  gap: 6px;
  opacity: 0;
  transform: translateY(10px);
  transition: opacity 0.6s ease-out 0.6s, transform 0.6s ease-out 0.6s;
}

.modal-hero.is-animating .modal-hero-tag {
  opacity: 1;
  transform: translateY(0);
}

/* ID Card - Hide on Mobile */
.modal-id-card {
  display: none !important;
}

/* Catchphrase - Simple Box */
.modal-catch {
  margin: 0 20px 16px;
  padding: 16px 18px;
  border-radius: 8px;
  border: none;
  background: #f8f8f8;
  font-style: normal;
  color: #2d2d2d;
  box-shadow: none;
  line-height: 1.7;
  letter-spacing: 0.02em;
  font-weight: 500;
  font-size: 0.9rem;
  border-left: 3px solid var(--d-accent, #C41A30);
}

.modal-catch::before {
  display: none;
}

/* Section Title - Reference Site Style */
.modal-section-title {
  color: #1a1a1a;
  border-left: none;
  padding: 0 20px;
  font-size: 0.7rem;
  font-weight: 700;
  letter-spacing: 0.12em;
  text-transform: uppercase;
  margin: 24px 0 10px;
  text-shadow: none;
  opacity: 0.6;
}

.modal-section-title::before {
  display: none;
}

/* Key-Value Info - Simple List */
.modal-kv {
  display: grid;
  grid-template-columns: 1fr;
  gap: 0;
  padding: 0 20px;
  margin-bottom: 20px;
}

.modal-kv .kv {
  background: transparent;
  border: none;
  border-bottom: 1px solid rgba(0, 0, 0, 0.08);
  border-radius: 0;
  padding: 14px 0;
  box-shadow: none;
  transition: none;
}

.modal-kv .kv:last-child {
  border-bottom: none;
}

.modal-kv .kv::before {
  display: none;
}

.modal-kv .kv:active {
  transform: none;
}

.modal-kv .label {
  color: rgba(0, 0, 0, 0.5);
  text-shadow: none;
  font-size: 0.75rem;
  font-weight: 600;
  letter-spacing: 0.04em;
  margin-bottom: 4px;
  display: block;
  text-transform: uppercase;
}

.modal-kv .value {
  color: #1a1a1a;
  line-height: 1.6;
  font-size: 0.95rem;
  font-weight: 600;
}

/* List Items - Simple Cards */
.modal-list {
  padding: 0 20px;
  margin-bottom: 20px;
}

.modal-list li {
  background: #f8f8f8;
  border: none;
  border-radius: 8px;
  padding: 16px 18px;
  margin-bottom: 10px;
  box-shadow: none;
  transition: none;
}

.modal-list li::before {
  display: none;
}

.modal-list li:active {
  transform: none;
}

.modal-list .item-name {
  color: var(--d-accent, #C41A30);
  text-shadow: none;
  font-size: 0.85rem;
  font-weight: 700;
  margin-bottom: 6px;
}

.modal-list .item-desc {
  color: #2d2d2d;
  font-size: 0.85rem;
  line-height: 1.7;
  font-weight: 500;
}

/* Story/Setting Text - Simple Box */
.modal-story {
  background: #f8f8f8;
  border: none;
  border-radius: 8px;
  padding: 16px 18px;
  margin: 0 20px 20px;
  color: #2d2d2d;
  line-height: 1.8;
  letter-spacing: 0.01em;
  box-shadow: none;
  font-weight: 500;
  font-size: 0.9rem;
  white-space: pre-wrap;
  word-break: break-word;
}

.modal-story::before {
  display: none;
}

/* Footer Navigation - Simple Bar */
.modal-footer {
  position: sticky;
  bottom: 0;
  margin: 0;
  padding: 12px 16px;
  padding-bottom: calc(12px + env(safe-area-inset-bottom, 0px));
  border-top: 1px solid rgba(0, 0, 0, 0.08);
  background: #fff;
  display: flex;
  justify-content: space-between;
  gap: 10px;
  box-shadow: 0 -1px 2px rgba(0, 0, 0, 0.04);
}

.modal-footer::before {
  display: none;
}

.modal-navbtn {
  flex: 1;
  background: #1a1a1a;
  border: none;
  color: #fff;
  padding: 14px 18px;
  border-radius: 8px;
  font-weight: 700;
  font-size: 0.85rem;
  letter-spacing: 0.04em;
  box-shadow: none;
  transition: all 0.2s ease;
}

.modal-navbtn:active {
  transform: scale(0.98);
  background: #333;
}

.modal-navbtn[data-action="prev"]::before {
  content: "← ";
}

.modal-navbtn[data-action="next"]::after {
  content: " →";
}
}

@media (max-width: 768px) {
  .dragon-title {
    font-size: 30px;
  }

  .dragon-name {
    font-size: 42px;
  }

  .modal-dialog {
    width: 94vw;
    height: 88vh;
    border-width: 2px;
  }

  .modal-title {
    font-size: 1.05rem;
  }

  .modal-close {
    padding: 8px 14px;
    font-size: 0.9rem;
  }

  .modal-section-title {
    font-size: 1rem;
    margin: 22px 0 12px;
  }
}

@media (max-width: 520px) {
  .dragons-band {
    height: 80px;
  }

  .dragon-title {
    font-size: 26px;
  }

  .dragon-name {
    font-size: 36px;
  }

  .meta li {
    grid-template-columns: 8.5em 1fr;
  }

  .dragon-badge {
    width: 84px;
    height: 84px;
  }

  .modal-dialog {
    width: 96vw;
    height: 90vh;
    border-radius: 10px;
  }

  .modal-head {
    padding: 14px 14px;
  }

  .modal-body {
    padding: 16px 14px 18px;
  }

  .modal-close {
    padding: 7px 12px;
  }
}